<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>学生成绩管理系统 - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @RenderSection("Styles", required: false)
    <link href="~/css/site.css" rel="stylesheet" />
    <!-- 添加防缓存元标签 -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <!-- 添加Font Awesome支持 -->
    <link href="https://cdn.jsdelivr.net/npm/font-awesome@5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row min-vh-100">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar py-4 border-end">
                <div class="sidebar-sticky">
                    @{
                        var logoController = User.IsInRole("Student") ? "StudentDashboard" : "Home";
                    }
                    <a class="d-block text-decoration-none mb-4" asp-controller="@logoController" asp-action="Index">
                        <div class="fw-bold fs-4 text-primary text-center" style="letter-spacing:1px;">成绩管理系统</div>
                    </a>
                    <ul class="nav flex-column mb-4">
                        @if (User.IsInRole("Student"))
                        {
                            <!-- 学生菜单 -->
                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark" asp-controller="StudentDashboard" asp-action="Index">
                                    <i class="fas fa-tachometer-alt me-2"></i>我的仪表板
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- 管理员和教师菜单 -->
                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark" asp-controller="Student" asp-action="Index">
                                    <i class="fas fa-user-graduate me-2"></i>学生管理
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark" asp-controller="Classes" asp-action="Manage">
                                    <i class="fas fa-school me-2"></i>班级管理
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark" asp-controller="Grade" asp-action="Index">
                                    <i class="fas fa-clipboard-list me-2"></i>成绩管理
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a class="nav-link text-dark" asp-controller="Courses" asp-action="Index">
                                    <i class="fas fa-book me-2"></i>课程管理
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="nav flex-column mt-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-user"></i> @(User.FindFirst("DisplayName")?.Value ?? User.Identity.Name)
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item">
                                            <button type="submit" class="btn btn-link text-dark p-0">
                                                <i class="fa fa-sign-out"></i> 退出登录
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="fa fa-sign-in"></i> 登录
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
            <main role="main" class="col-md-10 ms-sm-auto px-4">
                <!-- 添加全局消息提示 -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <div class="pt-4 pb-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <footer class="border-top footer text-muted mt-auto">
        <div class="container-fluid text-center py-2">
            &copy; 2025 - 学生成绩管理系统
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>