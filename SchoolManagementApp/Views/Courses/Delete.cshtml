@model SchoolManagementApp.Models.Course
@{
    ViewData["Title"] = "删除课程";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <h5>确定要删除该课程吗？</h5>
                    <dl class="row">
                        <dt class="col-sm-3">课程编号</dt>
                        <dd class="col-sm-9">@Model.CourseCode</dd>
                        <dt class="col-sm-3">课程名</dt>
                        <dd class="col-sm-9">@Model.CourseName</dd>
                        <dt class="col-sm-3">开课院系</dt>
                        <dd class="col-sm-9">@Model.Department</dd>
                        <dt class="col-sm-3">学分</dt>
                        <dd class="col-sm-9">@Model.Credit</dd>
                    </dl>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="CourseCode" />
                        <button type="submit" class="btn btn-danger">确认删除</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">取消</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 