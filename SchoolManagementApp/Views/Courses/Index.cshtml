@model IEnumerable<SchoolManagementApp.Models.Course>
@{
    ViewData["Title"] = "课程管理";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold text-primary">
            <i class="fas fa-book me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i>添加新课程
        </a>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>课程编号</th>
                            <th>课程名</th>
                            <th>开课院系</th>
                            <th>学分</th>
                            <th class="text-center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.CourseCode</td>
                                <td>@course.CourseName</td>
                                <td>@course.Department</td>
                                <td>@course.Credit</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@course.CourseCode" class="btn btn-sm btn-primary me-2">编辑</a>
                                    <a asp-action="Delete" asp-route-id="@course.CourseCode" class="btn btn-sm btn-danger">删除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 