@model SchoolManagementApp.Models.Classes

@{
    ViewData["Title"] = "编辑班级信息";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h3 class="card-title mb-0 text-center">
                        <i class="fas fa-edit me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="ClassId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ClassName" class="form-label fw-bold">
                                        <i class="fas fa-font me-1"></i>班级名称
                                    </label>
                                    <input asp-for="ClassName" class="form-control form-control-lg" required />
                                    <div class="invalid-feedback">请输入班级名称</div>
                                    <span asp-validation-for="ClassName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ClassCode" class="form-label fw-bold">
                                        <i class="fas fa-barcode me-1"></i>班级代码
                                    </label>
                                    <input asp-for="ClassCode" class="form-control form-control-lg" />
                                    <span asp-validation-for="ClassCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="form-group">
                                <label asp-for="TeacherName" class="form-label fw-bold">
                                    <i class="fas fa-chalkboard-teacher me-1"></i>班主任
                                </label>
                                <input asp-for="TeacherName" class="form-control form-control-lg" />
                                <span asp-validation-for="TeacherName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="form-group">
                                <label asp-for="Description" class="form-label fw-bold">
                                    <i class="fas fa-file-alt me-1"></i>班级描述
                                </label>
                                <textarea asp-for="Description" class="form-control form-control-lg" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-1"></i>返回列表
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save me-1"></i>保存更改
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
} 