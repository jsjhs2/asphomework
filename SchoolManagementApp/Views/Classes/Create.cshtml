@model SchoolManagementApp.Models.Classes

@{
    ViewData["Title"] = "创建新班级";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h3 class="card-title mb-0 text-center">
                        <i class="fas fa-plus-circle me-2"></i>@ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ClassName" class="form-label fw-bold">
                                        <i class="fas fa-font me-1"></i>班级名称
                                    </label>
                                    <input asp-for="ClassName" class="form-control form-control-lg"
                                           placeholder="例如：高一(1)班" required />
                                    <div class="invalid-feedback">请输入班级名称</div>
                                    <span asp-validation-for="ClassName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ClassCode" class="form-label fw-bold">
                                        <i class="fas fa-barcode me-1"></i>班级代码
                                    </label>
                                    <input asp-for="ClassCode" class="form-control form-control-lg"
                                           placeholder="例如：G1C01" />
                                    <span asp-validation-for="ClassCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-group">
                                <label asp-for="TeacherName" class="form-label fw-bold">
                                    <i class="fas fa-chalkboard-teacher me-1"></i>班主任
                                </label>
                                <input asp-for="TeacherName" class="form-control form-control-lg"
                                       placeholder="请输入班主任姓名" />
                                <span asp-validation-for="TeacherName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-group">
                                <label asp-for="Description" class="form-label fw-bold">
                                    <i class="fas fa-file-alt me-1"></i>班级描述
                                </label>
                                <textarea asp-for="Description" class="form-control form-control-lg"
                                          rows="3" placeholder="可选的班级描述信息..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-1"></i>返回列表
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save me-1"></i>创建班级
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card border-primary mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-lightbulb text-primary me-2"></i>创建班级指南
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            班级名称应清晰明确，如"高一(1)班"、"高二理科班"等
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            班级代码建议使用简写格式，如"G1C01"（高一1班）
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            添加班级后，可以在学生管理中将学生分配到班级
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            班级创建后，班主任和其他信息可以随时更新
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // 表单验证
        (function () {
            'use strict'

            const forms = document.querySelectorAll('.needs-validation')

            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>

    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 6px 15px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-header {
            font-size: 1.25rem;
        }

        .form-control-lg {
            border-radius: 10px;
            padding: 12px 16px;
            font-size: 1.05rem;
        }

        .btn-lg {
            border-radius: 10px;
            padding: 12px 24px;
            font-weight: 600;
        }

        .list-group-item {
            border: none;
            padding: 12px 20px;
            background-color: transparent;
        }
    </style>
}