@model List<SchoolManagementApp.Models.Student>

@{
    ViewData["Title"] = "批量导入学生信息";
}

<h1>批量导入学生信息</h1>

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    @if (ViewData.ModelState != null && ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger">
            <strong>导入失败!</strong>
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <div class="form-group">
        <label for="file">选择 Excel 文件</label>
        <input type="file" class="form-control-file" id="file" name="file" accept=".xlsx">
    </div>

    <button type="submit" class="btn btn-primary">导入</button>
</form>